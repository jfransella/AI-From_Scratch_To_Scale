# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Python files
[*.py]
indent_style = space
indent_size = 4
max_line_length = 88

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 4

# TOML files
[*.toml]
indent_style = space
indent_size = 4

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# PowerShell files
[*.ps1]
indent_style = space
indent_size = 4

# Configuration files
[*.{ini,cfg}]
indent_style = space
indent_size = 4

# Jupyter notebooks
[*.ipynb]
indent_style = space
indent_size = 2

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2

# CSV and data files
[*.csv]
insert_final_newline = false

# Git files
[.gitignore]
indent_style = space
indent_size = 2 